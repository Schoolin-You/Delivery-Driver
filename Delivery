public class Delivery : MonoBehaviour
{
    [SerializeField] Color32 hasPackageColor = new Color32 (1, 1, 1, 1);
    [SerializeField] Color32 noPackageColor = new Color32(1, 1, 1, 1);

    [SerializeField] float destroyDelay = 0.5f;
    bool hasPackage = false;

    SpriteRenderer spriteRenderer;
    // Will change the color when the package is picked up
    void Start()
    {
        spriteRenderer = GetComponent<SpriteRenderer>(); 
    }

    void OnCollisionEnter2D(Collision2D other)
    {
        // This is when you hit the colliders on the trees, rocks, and houses
        Debug.Log("You hit something.");
    }

    void OnTriggerEnter2D(Collider2D other)
    {
        // Will let you pick up the package, will say it in console, and will change the color
        if (other.tag == "Package" && !hasPackage)
        {
            Debug.Log("Package picked up. Now to the Customer.");
            hasPackage = true;
            spriteRenderer.color = hasPackageColor;
            Destroy(other.gameObject, destroyDelay);
        }
        // Checks to see if you have package and makes sure you did drop it off
        if (other.tag == "Customer" && hasPackage)
        {
            Debug.Log("You have delivered the package. CONGATULATIONS!!!");
            hasPackage = false;
            spriteRenderer.color = noPackageColor;
            Destroy(other.gameObject, destroyDelay);
        }
        // if you drive over the customer with no package CAUTION tends to say after drop off aswell
        if (other.tag == "Customer" && !hasPackage)
        {
            Debug.Log("You still need the package");
        }
    }
}
