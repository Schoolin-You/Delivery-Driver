public class Driver : MonoBehaviour
{
    // The speeds for the player
     [SerializeField] float steerSpeed = 1;
     [SerializeField] float moveSpeed = 0.01f;
     [SerializeField] float slowSpeed = 15f;
     [SerializeField] float boostSpeed = 30f;

    // Update is called once per frame
    void Update()
    {
        //This is for movement like up/down and left/right
        float steerAmount = Input.GetAxis("Horizontal") * steerSpeed * Time.deltaTime;
        float moveAmount = Input.GetAxis("Vertical") * moveSpeed * Time.deltaTime;
        transform.Rotate(0, 0, -steerAmount);
        transform.Translate(0, moveAmount, 0);
    }

    // When you crash into houses,trees, or rocks you'll slow down
    void OnCollisionEnter2D(Collision2D other)
    {
        moveSpeed = slowSpeed;
    }

    // This happens when you run over the boost
    void OnTriggerEnter2D(Collider2D other)
    {
            if(other.tag == "Boost")
            {
                moveSpeed = boostSpeed;
                Debug.Log("You are boosting and going fast");
            }
    }
}
